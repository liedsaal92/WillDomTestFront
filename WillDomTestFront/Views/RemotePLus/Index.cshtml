@model IEnumerable<WeatherForecast>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h1>Weather Forecast</h1>
        </div>
        <div class="col-sm-6">

        </div>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(m => m.Date)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.TemperatureC)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.TemperatureF)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.Summary)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Date</th>
                    <td>@item.TemperatureC</td>
                    <td>@item.TemperatureF</td>
                    <td>@item.Summary</td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p>No existen registros</p>
}


