@model Article
@{
    ViewData["Title"] = "DeleteArticle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Delete article</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form asp-action="DeleteArticle" method="post">
                <input type="hidden" asp-for="Id">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    Title
                    <input asp-for="Title" class="form-control" disabled />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Content
                    <input asp-for="Content" class="form-control" disabled />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Image
                    <input asp-for="Image" type="file" class="form-control" accept="image/png, image/jpeg" disabled />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" name="name" value="Delete article" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

