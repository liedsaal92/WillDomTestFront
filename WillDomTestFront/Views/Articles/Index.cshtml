@model IEnumerable<Article>
@{
    ViewData["Title"] = "Lista de articulos DB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h1>Lista de articulos DB</h1>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-dark d-block" asp-action="Manage" asp-controller="Articles">Administrar nuevos articulos</a>
        </div>
    </div>
</div>

<div class="listBlogs">
    <div class="container article">
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <div class="row article-section">
                    <div class="col-4 article-content">
                        <h3 class="article__title"><span>@item.Title</span> @item.Title</h3>
                        <div class="article__dek"><p>@item.Content</p></div>
                        <div class="article__meta"><span class="by">By</span>@item.Content</div>
                    </div>
                    <div class="col-8 article-image">
                        <img src="https://hodinkee.imgix.net/uploads/images/779fa657-4a26-41b4-ba18-64db969071d5/1515544005_phantom_thread_unit_daniel_day_lewis_vicky_krieps_12.jpg?auto=format&ch=Width%2CDPR%2CSave-Data&dpr=2.0&fit=crop&fm=jpg&h=315&ixjsv=2.2.4&ixlib=rails-1.1.0&q=50&usm=12&w=650" alt="Alternate Text" class="adaptar" />
                    </div>
                    @*<div class="col-8 article-image">
                            <img src="@item.Image" alt="Alternate Text" class="adaptar" />
                        </div>*@
                </div>
            }
        }
        else
        {
            <p>No existen registros</p>
        }

    </div>
</div>
