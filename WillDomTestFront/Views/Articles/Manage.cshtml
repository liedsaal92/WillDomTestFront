@model IEnumerable<Article>
@{
    ViewData["Title"] = "Manage DB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["mensaje"]!=null)
    {
    <div class="alert alert-success alert-dismissible fade show " role="alert">
        @TempData["mensaje"]
        <button type="button" class="close" date-dismiss="alert" aria-label="Close">  
            <span aria- hidden="true">&times;</span>
        </button>
    </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h1>Manage articles DB</h1>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success  btn-sm d-block" asp-action="Create" asp-controller="Articles">Crear nuevos articulos</a>
        </div>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(m => m.Id)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.Title)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.Content)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.Image)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td>@item.Image</td>
                <td>
                    <a asp-controller="Articles" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-controller="Articles" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger  btn-sm">Eliminar</a>

                </td>
            </tr>
            }

        </tbody>
    </table>
}
else
{
    <p>No existen registros</p>
}



